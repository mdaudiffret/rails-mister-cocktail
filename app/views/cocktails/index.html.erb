<div class="banner d-flex white justify-content-center align-items-center" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.7329306722689075) 0%, rgba(0,0,0,0) 100%), url('<%= image_path 'banner.jpg' %>')">
  <div class="navbar fixed-top">
    <div class="container">
      <%= image_tag 'logo.png', class: "logo" %>
      <%= image_tag 'avatar.jpg', class: "avatar" %>
    </div>
  </div>
  <div>
    <span id="banner-typed-text"></span>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center flex-wrap">
    <h1>Cocktails</h1>
    <%= link_to "new cocktail", new_cocktail_path, class: "btn btn-outline-primary btn-sm rounded-pill" %>
  </div>

  <div class="d-flex justify-content-between align-items-center flex-wrap flex-row-reverse">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="ck-card card bg-dark text-white" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.7329306722689075) 0%, rgba(0,0,0,0) 100%), url('<%= cl_image_path cocktail.photo.key %>'); background-size: cover; background-position: center; height: 200px; width: 30%">
          <div class="card-img-overlay d-flex justify-content-between flex-column">
            <h4 class="card-title"><%= cocktail.name %></h4>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to "200 ðŸ¥‚", cocktail_path(cocktail), class: "ck-badge badge badge-light badge-pill" %>
              <%= link_to "", cocktail_path(cocktail), class: "ck-btn fas fa-heart btn btn-outline-light btn-sm rounded-pill mt-auto p-2 bd-highlight" %>
              <%= link_to "", cocktail_path(cocktail), class: "ck-btn far fa-eye btn btn-outline-light btn-sm rounded-pill mt-auto p-2 bd-highlight" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="ck-card card bg-dark text-white" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.7329306722689075) 0%, rgba(0,0,0,0) 100%), url('<%= cocktail.picture_url %>'); background-size: cover; background-position: center; height: 200px; width: 30%">
          <div class="card-img-overlay d-flex justify-content-between flex-column">
            <h4 class="card-title"><%= cocktail.name %></h4>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to "200 ðŸ¥‚", cocktail_path(cocktail), class: "ck-badge badge badge-light badge-pill" %>
              <%= link_to "", cocktail_path(cocktail), class: "ck-btn fas fa-heart btn btn-outline-light btn-sm rounded-pill mt-auto p-2 bd-highlight" %>
              <%= link_to "", cocktail_path(cocktail), class: "ck-btn far fa-eye btn btn-outline-light btn-sm rounded-pill mt-auto p-2 bd-highlight" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
