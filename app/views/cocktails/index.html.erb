<div class="d-flex justify-content-between align-items-center flex-wrap">
  <h1>Cocktails</h1>
  <%= link_to "new cocktail", new_cocktail_path, class: "btn btn-outline-primary btn-sm rounded-pill" %>
</div>

<div class="d-flex justify-content-between align-items-center flex-wrap ">
  <% @cocktails.each do |cocktail| %>
  <div class="ck-card card bg-dark text-white" style="background-image: url('<%= cocktail.picture_url %>'); background-size: cover; background-position: center; height: 200px; width: 30%">
    <div class="card-img-overlay d-flex justify-content-between flex-column">
      <h4 class="card-title"><%= cocktail.name %></h4>
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to " 4/5", cocktail_path(cocktail), class: "ck-badge fas fa-star badge badge-light badge-pill" %>
        <%= link_to "", cocktail_path(cocktail), class: "ck-btn fas fa-heart btn btn-outline-light btn-sm rounded-pill mt-auto p-2 bd-highlight" %>
        <%= link_to "", cocktail_path(cocktail), class: "ck-btn far fa-eye btn btn-outline-light btn-sm rounded-pill mt-auto p-2 bd-highlight" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
